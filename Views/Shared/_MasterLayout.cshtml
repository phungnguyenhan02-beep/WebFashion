    @{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - LEVENTS Style</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-white text-dark">

    <!-- ========== HEADER ========== -->
    <header class="border-bottom py-3 shadow-sm sticky-top bg-white">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Logo -->
            <a href="~/Home/Index" class="navbar-brand fw-bold fs-3 text-dark text-uppercase">Levents</a>

            <!-- Navigation -->
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a href="~/Home/Index" class="nav-link text-dark">Trang chủ</a></li>
                    <li class="nav-item"><a href="~/ProductPage/Index" class="nav-link text-dark">Sản phẩm</a></li>
                    <li class="nav-item"><a href="~/Category/Index" class="nav-link text-dark">Danh mục</a></li>
                    <li class="nav-item"><a href="~/About/Index" class="nav-link text-dark">Giới thiệu</a></li>
                    <li class="nav-item"><a href="~/Contact/Index" class="nav-link text-dark">Liên hệ</a></li>
                </ul>
            </nav>

            <!-- Icons -->
            <div class="d-flex align-items-center">
                <form class="d-flex me-3">
                    <input class="form-control form-control-sm" type="search" placeholder="Tìm kiếm..." />
                </form>
                <a href="~/Account/Login" class="text-dark me-3"><i class="fa-regular fa-user fs-5"></i></a>
                <a href="~/Carts/Index" class="text-dark position-relative">
                    <i class="fa-solid fa-bag-shopping fs-5"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark text-white">3</span>
                </a>
            </div>
        </div>
    </header>

    <!-- ========== MAIN CONTENT ========== -->
    <main class="container my-5">
        @RenderBody()

        <!-- Demo Product Grid -->
        <section class="row row-cols-1 row-cols-md-4 g-4">
            <div class="col">
                <div class="card border-0">
                    <img src="~/Content/Images/sample1.jpg" class="card-img-top rounded-3" alt="Áo thun trắng" />
                    <div class="card-body text-center">
                        <h6 class="card-title fw-semibold">Áo thun trắng basic</h6>
                        <p class="text-muted mb-0">350.000đ</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card border-0">
                    <img src="~/Content/Images/sample2.jpg" class="card-img-top rounded-3" alt="Áo hoodie đen" />
                    <div class="card-body text-center">
                        <h6 class="card-title fw-semibold">Hoodie đen Levents</h6>
                        <p class="text-muted mb-0">750.000đ</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card border-0">
                    <img src="~/Content/Images/sample3.jpg" class="card-img-top rounded-3" alt="Áo sơ mi" />
                    <div class="card-body text-center">
                        <h6 class="card-title fw-semibold">Sơ mi form rộng</h6>
                        <p class="text-muted mb-0">420.000đ</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card border-0">
                    <img src="~/Content/Images/sample4.jpg" class="card-img-top rounded-3" alt="Áo polo" />
                    <div class="card-body text-center">
                        <h6 class="card-title fw-semibold">Polo Levents Classic</h6>
                        <p class="text-muted mb-0">390.000đ</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- ========== FOOTER ========== -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Levents®</h5>
                    <p>Thời trang tối giản, hiện đại dành cho giới trẻ Việt Nam.</p>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Hỗ trợ</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Chính sách đổi trả</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Hướng dẫn mua hàng</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Liên hệ</h6>
                    <p>Email: support@levents.asia<br />Hotline: 1900 633 028</p>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Theo dõi chúng tôi</h6>
                    <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>
            <div class="text-center mt-4 small">
                © 2025 Levents Group. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
