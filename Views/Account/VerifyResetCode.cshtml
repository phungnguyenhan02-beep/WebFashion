
@{
    ViewBag.Title = "VerifyResetCode";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="text-center mb-4"><i class="fa-solid fa-key"></i> Xác nhận mã khôi phục</h4>
                <p class="text-muted text-center">Vui lòng nhập mã xác nhận đã được gửi đến email của bạn.</p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                @using (Html.BeginForm("VerifyResetCode", "Account", FormMethod.Post))
                {
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Nhập email của bạn" required />
                    </div>

                    <div class="form-group mb-4">
                        <label for="resetCode">Mã xác nhận</label>
                        <input type="text" class="form-control" name="resetCode" id="resetCode" placeholder="Nhập mã xác nhận" required />
                    </div>

                    <button type="submit" class="btn btn-dark w-100">
                        <i class="fa-solid fa-check-circle"></i> Xác nhận
                    </button>
                }

                <div class="text-center mt-3">
                    <span class="text-muted">Chưa nhận được mã?</span>
                    @Html.ActionLink("Gửi lại mã", "ForgetPassword", "Account", null, new { @class = "text-primary text-decoration-none fw-semibold" })
                </div>
            </div>
        </div>
    </div>
</div>


