
@{
    ViewBag.Title = "Logout";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - LEVENTS Style</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-light text-dark">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4 text-center" style="max-width: 400px;">
            <h4 class="mb-3"><i class="fa-solid fa-user-slash"></i> Đăng xuất tài khoản</h4>
            <p>Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?</p>

            <form action="@Url.Action("Logout", "Account")" method="post">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="fa-solid fa-right-from-bracket"></i> Xác nhận đăng xuất
                </button>
            </form>

            <a href="@Url.Action("Home_page", "HomePage")" class="btn btn-outline-secondary w-100 mt-3">
                <i class="fa-solid fa-house"></i> Quay về trang chủ
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


