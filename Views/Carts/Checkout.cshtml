@model LT_WebThoiTrang.Models.CheckOutViewModels
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold mb-4">Thanh toán</h3>

<div class="row">
    <div class="col-md-6">
        <h5>Thông tin giao hàng</h5>
        <form action="/Carts/PlaceOrder" method="post">
            <div class="mb-3">
                <label class="form-label">Họ và tên</label>
                <input type="text" name="Address.FullName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <input type="text" name="Address.SpecificAddress" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input type="text" name="Address.Phone" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-dark px-5">Đặt hàng</button>
        </form>
    </div>

    <div class="col-md-6">
        <h5>Đơn hàng của bạn</h5>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.ProductName
                    <span>@string.Format("{0:N0} đ", item.TotalPrice)</span>
                </li>
            }
        </ul>
        <h5 class="text-end">Tổng: <span class="fw-bold">@string.Format("{0:N0} đ", Model.TotalAmount)</span></h5>
    </div>
</div>
