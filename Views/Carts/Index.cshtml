@model List<LT_WebThoiTrang.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="container mt-4">
    <h2>Giỏ hàng</h2>
    @if (!Model.Any())
    {
        <p>Giỏ hàng trống. <a href="@Url.Action("Index", "Home")">Mua hàng ngay</a></p>
    }
    else
    {
        <form method="post" action="@Url.Action("UpdateQuantity", "Cart")">
            <table class="table table-bordered text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="~/Uploads/Product/@item.ImageUrl" width="80" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("N0") đ</td>
                            <td>
                                <form action="@Url.Action("UpdateQuantity", "Cart")" method="post" class="dinline">
                                    <input type="hidden" name="id" value="@item.ProductID" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1"
                                           style="width:60px;" />
                                    <button type="submit" class="btn btn-sm btn-secondary">Cập nhật</button>
                                </form>
                            </td>
                            <td>@item.TotalPrice.ToString("N0") đ</td>
                            <td><a href="@Url.Action("Remove", "Cart", new { id = item.ProductID })" class="btn btnsm btn-danger">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            // Checkout.cshtml
            // Success.cshtml
            <div class="text-end">
            
                <a href="@Url.Action("Checkout")" class="btn btn-success">Đặt hàng</a>
            </div>
        </form>
    }
</div>

