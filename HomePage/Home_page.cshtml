@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner -->
<div class="banner mb-5">
    <img src="/Content/Images/banner.jpg" class="img-fluid rounded" alt="Banner" />
</div>

<!-- Danh mục -->
<h4 class="fw-semibold mb-4">Danh mục nổi bật</h4>
<div class="row g-3 mb-5">
    <div class="col-6 col-md-3">
        <div class="category-card text-center p-3 border rounded hover-shadow">
            <img src="/Content/Images/men.jpg" class="img-fluid rounded mb-2" />
            <p class="fw-semibold">Nam</p>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="category-card text-center p-3 border rounded hover-shadow">
            <img src="/Content/Images/women.jpg" class="img-fluid rounded mb-2" />
            <p class="fw-semibold">Nữ</p>
        </div>
    </div>
</div>

<!-- Sản phẩm nổi bật -->
<h4 class="fw-semibold mb-4">Sản phẩm mới</h4>
<div class="row g-4">
    @* Demo, sau này thay bằng @foreach (var p in Model.Products) *@
    @for (int i = 1; i <= 8; i++)
    {
        <div class="col-6 col-md-3">
            <div class="product-card border rounded p-2 hover-shadow">
                <img src="/Content/Images/product@(i%4+1).jpg" class="img-fluid rounded mb-2" alt="Sản phẩm" />
                <h6 class="fw-semibold">Áo Thun Basic @(i)</h6>
                <p class="text-muted mb-1">299.000₫</p>
                <a href="/ProductPage/Details/@i" class="btn btn-dark w-100">Xem chi tiết</a>
            </div>
        </div>
    }
</div>
